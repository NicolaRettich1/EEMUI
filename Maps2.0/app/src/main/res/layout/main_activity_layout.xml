<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/karte_erster_bildschirm"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eemui.team7.maps20.MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="@dimen/heightSuche"
        android:id="@+id/txtFindLocationOne"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:hint="@string/strFindLocationOne"
        android:textColorHint="@android:color/widget_edittext_dark" />

    <Button
        android:layout_width="@dimen/grIcon"
        android:layout_height="@dimen/grIcon"
        android:id="@+id/cmdZumRoutenplaner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_navigation"/>

    <Button
        android:layout_width="@dimen/grIcon"
        android:layout_height="@dimen/grIcon"
        android:id="@+id/cmdKompass"
        android:layout_above="@+id/cmdZumRoutenplaner"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_kompass"/>
</RelativeLayout>
