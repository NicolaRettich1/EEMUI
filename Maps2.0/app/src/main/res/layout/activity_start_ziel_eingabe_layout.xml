<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eemui.team7.maps20.StartZielEingabe">

    <TextView
        android:id="@+id/txtStatusStartZielEins"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/txtStatusStartZiel"
        android:layout_alignEnd="@+id/ivStartZielKarte"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cmdZwischenzielHinzufuegenEins"
        android:text="New Text" />


    <ImageView
        android:id="@+id/ivStartZielKarte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtStart"
        android:layout_alignEnd="@+id/cmdZurRoutenauswahlEins"
        android:padding="@dimen/padStartZiel"
        android:src="@drawable/karte_start_ziel" />

    <EditText
        android:id="@+id/txtStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marStartZiel"
        android:layout_marginRight="@dimen/marStartZiel"
        android:layout_marginTop="@dimen/marStartZiel"
        android:layout_marginBottom="@dimen/marStartZiel"
        android:hint="@string/strStart"
        android:padding="@dimen/padStartZiel"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/cmdZurRoutenauswahlEins" />

    <EditText
        android:id="@+id/txtZiel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marStartZiel"
        android:layout_marginRight="@dimen/marStartZiel"
        android:layout_marginTop="@dimen/marStartZiel"
        android:hint="@string/strZiel"
        android:padding="@dimen/padStartZiel"
        android:layout_below="@+id/txtStart"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cmdZwischenzielHinzufuegenEins"
        android:layout_width="@dimen/grIcon"
        android:layout_height="@dimen/grIcon"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/cmdZurRoutenauswahlEins"
        android:background="@drawable/icon_zwischenziel" />

    <Button
        android:id="@+id/cmdZurRoutenauswahlEins"
        android:layout_width="@dimen/grIcon"
        android:layout_height="@dimen/grIcon"
        android:layout_alignEnd="@+id/txtZiel"
        android:layout_alignTop="@+id/cmdZwischenzielHinzufuegenEins"
        android:layout_alignWithParentIfMissing="false"
        android:background="@drawable/icon_navigation" />


</RelativeLayout>
